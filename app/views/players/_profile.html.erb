<article>
  <%# ヘッダー %>
  <div class="border-b border-neutral-800 pb-6 mb-8">
    <div class="flex items-center gap-3">
      <h2 class="text-3xl font-extrabold tracking-tight"><%= profile['name'] %></h2>
      <% if profile['retired'] %>
        <span class="text-xs font-bold px-2.5 py-1 rounded bg-neutral-700 text-neutral-300 border border-neutral-600">引退済み</span>
      <% end %>
    </div>
    <div class="flex flex-wrap items-center gap-x-4 gap-y-1 mt-2 text-sm text-neutral-500">
      <span><%= profile['team'] %></span>
      <span class="text-neutral-700">|</span>
      <span><%= profile['position'] %></span>
      <span class="text-neutral-700">|</span>
      <span><%= profile['throws_bats'] %></span>
      <% if profile['birth_date'].present? %>
        <span class="text-neutral-700">|</span>
        <span><%= profile['birth_date'] %><%= " （#{profile['age']}歳）" if profile['age'].present? %></span>
      <% end %>
    </div>
  </div>

  <%# プロフィール %>
  <% if profile['formal'].present? %>
    <div class="mb-10">
      <h3 class="text-xs font-bold uppercase tracking-widest text-orange-500 mb-3">Profile</h3>
      <p class="text-neutral-300 leading-relaxed whitespace-pre-wrap"><%= profile['formal'] %></p>
    </div>
  <% end %>

  <%# タイトル・受賞歴 %>
  <% if profile['titles'].present? %>
    <div class="mb-10">
      <h3 class="text-xs font-bold uppercase tracking-widest text-orange-500 mb-3">Titles</h3>
      <div class="grid gap-2">
        <% profile['titles'].each do |title| %>
          <div class="flex items-start gap-2">
            <span class="text-orange-600 mt-0.5 leading-none">&#9670;</span>
            <span class="text-neutral-300 text-sm"><%= title %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# 類似選手 %>
  <% if profile['similar_players'].present? %>
    <div class="mb-10">
      <h3 class="text-xs font-bold uppercase tracking-widest text-orange-500 mb-3">Similar Players</h3>
      <div class="grid gap-3">
        <% profile['similar_players'].each do |player| %>
          <div class="flex items-start gap-3 p-3 rounded bg-neutral-800/50 border border-neutral-700/50">
            <span class="text-orange-600 mt-0.5 leading-none">&#9670;</span>
            <div>
              <span class="text-neutral-200 font-semibold text-sm"><%= player['name'] %></span>
              <p class="text-neutral-500 text-xs mt-0.5"><%= player['reason'] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# タグ %>
  <% if profile['tags'].present? %>
    <div class="mb-10">
      <h3 class="text-xs font-bold uppercase tracking-widest text-orange-500 mb-3">Tags</h3>
      <div class="flex flex-wrap gap-2">
        <% profile['tags'].each do |tag| %>
          <span class="text-xs px-3 py-1 rounded bg-neutral-800 text-neutral-400 border border-neutral-700">#<%= tag %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</article>
